<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvUser"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userListItemLogin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Пользователь:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userListItemLoginData"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userListItemPassword"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/userListItemLogin"
                android:text="Пароль:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/userListItemPasswordData"
                android:layout_alignParentRight="true"
                android:layout_below="@id/userListItemLogin"
                />
            <CheckBox
                android:id="@+id/userListItemBlocked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userListItemPassword"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="Заблокирован"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>